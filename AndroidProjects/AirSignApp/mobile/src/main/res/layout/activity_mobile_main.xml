<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MobileMainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="AirPass Data Collection"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff1e23ff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnPassword"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvTitle"
        android:onClick="btnClick"
        android:text="Type" />

    <Button
        android:id="@+id/btnUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnType"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnType"
        android:layout_marginTop="23dp"
        android:onClick="btnClick"
        android:text="User" />

    <Button
        android:id="@+id/btnPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnImposter"
        android:layout_marginTop="26dp"
        android:onClick="btnClick"
        android:text="Password" />

    <TextView
        android:id="@+id/tvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_marginStart="22dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/btnType"
        android:text="genuine" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnAddPassword"
        android:onClick="btnClick"
        android:text="Start" />

    <Button
        android:id="@+id/btnAddPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnAddUser"
        android:layout_alignBottom="@+id/btnAddUser"
        android:layout_centerHorizontal="true"
        android:onClick="btnClick"
        android:text="Add Password" />

    <Button
        android:id="@+id/btnAddUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnPassword"
        android:layout_marginTop="21dp"
        android:onClick="btnClick"
        android:text="Add User" />

    <TextView
        android:id="@+id/tvImposter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnImposter"
        android:layout_alignBottom="@+id/btnImposter"
        android:layout_alignStart="@+id/tvUser"
        android:text="Please select" />

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnUser"
        android:layout_alignBottom="@+id/btnUser"
        android:layout_alignStart="@+id/tvType"
        android:text="Please select" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPassword"
        android:layout_alignBottom="@+id/btnPassword"
        android:layout_alignStart="@+id/tvImposter"
        android:text="Please select" />

    <Button
        android:id="@+id/btnData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnAddUser"
        android:layout_below="@+id/btnAddUser"
        android:layout_marginTop="24dp"
        android:onClick="btnClick"
        android:text="Data" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnData"
        android:layout_alignBottom="@+id/btnData"
        android:layout_alignParentEnd="true"
        android:onClick="btnClick"
        android:text="Exit" />

    <Button
        android:id="@+id/btnImposter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnUser"
        android:layout_marginTop="20dp"
        android:onClick="btnClick"
        android:text="Imposter" />


</RelativeLayout>
