<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="edu.virginia.cs.mondol.medwatch.SettingsActivity"
    tools:deviceIds="wear_square">

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings" />

    <CheckBox
        android:id="@+id/cbUsePattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="Use patterns" />

    <CheckBox
        android:id="@+id/cbAtHomeOnly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="At Home Only" />

    <CheckBox
        android:id="@+id/cbTestMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick"
        android:text="Test Meals" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSettingsRefresh"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:onClick="btnClick"
            android:text="Refresh" />

        <Button
            android:id="@+id/btnSettingsReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnClick"
            android:text="Reset" />

    </LinearLayout>


</LinearLayout>
