<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.virginia.cs.mondol.phonevoiceapp.MainActivity">


    <TextView
        android:text="Voice App"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textSize="25sp" />

    <Button
        android:text="Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTest"
        android:layout_alignBaseline="@+id/btnDataCollection"
        android:layout_alignBottom="@+id/btnDataCollection"
        android:layout_centerHorizontal="true"
        android:onClick="btnClick" />

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDataCollection"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:onClick="btnClick" />

    <Button
        android:text="Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnExit"
        android:layout_alignBaseline="@+id/btnTest"
        android:layout_alignBottom="@+id/btnTest"
        android:layout_alignParentEnd="true"
        android:onClick="btnClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDataCollection"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:id="@+id/tvStatus" />
</RelativeLayout>
