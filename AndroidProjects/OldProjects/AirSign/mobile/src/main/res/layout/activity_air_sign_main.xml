<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AirSignMainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AirSign"
        android:id="@+id/tvTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textColor="#ff1e23ff"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Practice"
        android:id="@+id/btnPractice"
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:layout_alignParentEnd="true"
        android:onClick="btnClick"
        android:layout_margin="7dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Train"
        android:id="@+id/btnTrain"
        android:layout_below="@+id/btnPractice"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:layout_alignParentEnd="true"
        android:onClick="btnClick"
        android:layout_margin="7dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:id="@+id/btnStatistics"
        android:layout_below="@+id/btnTrain"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="btnClick"
        android:layout_margin="7dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/btnSettings"
        android:layout_below="@+id/btnStatistics"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="btnClick"
        android:nestedScrollingEnabled="false"
        android:layout_margin="7dp" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/btnExit"
        android:layout_below="@+id/btnSettings"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="btnClick"
        android:layout_margin="7dp" />

</RelativeLayout>
