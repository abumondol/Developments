<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.virginia.cs.mooncake.m2feddata.SettingsActivity"
    tools:deviceIds="wear_square"
    android:background="#ffffff">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family ID"
        android:textColor="@android:color/black"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/btnMinusFamilyId"
        android:layout_below="@+id/tv1"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/tvFamilyId"
        android:onClick="btnClick"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:textColor="@android:color/black" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btnPlusFamilyId"
        android:layout_alignBottom="@+id/btnMinusFamilyId"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv1"
        android:layout_marginRight="10dp"
        android:onClick="btnClick"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/tvFamilyId"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv1"
        android:paddingTop="5dp" />


    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member ID"
        android:textColor="@android:color/black"
        android:paddingLeft="10dp"
        android:layout_below="@id/btnMinusFamilyId"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/btnMinusMemberId"
        android:layout_below="@+id/tv2"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/tvMemberId"
        android:onClick="btnClick"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:textColor="@android:color/black" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btnPlusMemberId"
        android:layout_alignBottom="@+id/btnMinusMemberId"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/tvMemberId"
        android:onClick="btnClick"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/tvMemberId"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv2"
        android:paddingTop="5dp" />

    <RadioGroup
        android:id="@+id/radioGroupHand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnMinusMemberId"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <RadioButton
            android:id="@+id/radioHandLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text=""
            android:textColor="@android:color/black"
            android:buttonTint="@android:color/holo_blue_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Left            "
            android:id="@+id/tvLeft"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Right"
            android:id="@+id/tvRight"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/radioHandRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textColor="@android:color/black"
            android:layout_alignTop="@+id/radioGroupHand"
            android:layout_alignEnd="@+id/btnPlusMemberId"
            android:buttonTint="@android:color/holo_blue_dark" />

    </RadioGroup>



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:id="@+id/btnData"
        android:layout_below="@+id/radioGroupHand"
        android:layout_alignStart="@+id/btnMinusMemberId"
        android:layout_toStartOf="@+id/tvMemberId"
        android:onClick="btnClick"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_marginTop="0dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/btnNext"
        android:layout_below="@+id/radioGroupHand"
        android:onClick="btnClick"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_alignEnd="@+id/btnPlusMemberId"
        android:layout_toEndOf="@+id/tvMemberId" />


</RelativeLayout>
